{
  "name": "root-workspace",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "lib",
    "demo",
    "website"
  ],
  "scripts": {
    "lib": "yarn workspace @rescriptbr/ancestor",
    "demo": "yarn workspace demo-workspace",
    "lib:compile": "yarn lib build",
    "demo:compile": "yarn demo rescript:watch",
    "demo:dev": "yarn demo vite:dev",
    "demo:build": "yarn demo vite:build",
    "docs:docusaurus": "yarn workspace website docusaurus",
    "docs:start": "yarn workspace website docusaurus start",
    "docs:build": "yarn workspace website docusaurus build",
    "docs:clear": "yarn workspace website docusaurus clear",
    "prepare": "husky install"
  },
  "devDependencies": {},
  "peerDependencies": {},
  "dependencies": {
    "husky": "7.0.1",
    "lint-staged": "11.1.1"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "yarn workspace website prettier"
    ],
    "*.res": [
      "yarn workspace website rescript:format",
      "yarn workspace @rescriptbr/ancestor format"
    ]
  }
}
